{
  "root": false,
  "ignorePatterns": ["dist"],
  "plugins": ["import"],
  "extends": ["plugin:import/recommended", "plugin:import/typescript"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal"],
        "alphabetize": { "order": "asc" }
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {},
      "typescript": {}
    }
  }
}
